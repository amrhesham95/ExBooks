            app:layout_constraintBottom_toTopOf="@+id/detailesBookLocation"
            app:layout_constraintEnd_toEndOf="@+id/detailesBookDescription"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/detailesBookDescription" />

        <TextView
            android:id="@+id/detailesBookLocation"
            android:layout_width="258dp"
            android:layout_height="39dp"
            android:layout_marginBottom="24dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/chat_btn"
            app:layout_constraintEnd_toEndOf="@+id/detailesBookCategory"
            app:layout_constraintHorizontal_bias="0.583"
            app:layout_constraintStart_toStartOf="@+id/detailesBookCategory" />

        <Button
            android:id="@+id/chat_btn"
            android:layout_width="111dp"
            android:layout_height="53dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/pressed_btn"
            android:text="chat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <Button
            android:id="@+id/call_btn"
            android:layout_width="111dp"
            android:layout_height="53dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="call"
            android:background="@drawable/pressed_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.916"
            app:layout_constraintStart_toEndOf="@+id/chat_btn"
            app:layout_constraintTop_toBottomOf="@+id/detailesBookLocation" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/callFAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="524dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.929"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/contact" />

