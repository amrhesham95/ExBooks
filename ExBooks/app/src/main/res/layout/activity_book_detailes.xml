            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/bookImageInDetailesActivity" />

        <TextView
            android:id="@+id/detailesBookDescription"
            android:layout_width="256dp"
            android:layout_height="37dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="48dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/detailesBookCategory"
            app:layout_constraintEnd_toEndOf="@+id/detailesBooktitle"
            app:layout_constraintHorizontal_bias="0.833"
            app:layout_constraintStart_toStartOf="@+id/detailesBooktitle" />

        <TextView
            android:id="@+id/detailesBookCategory"
            android:layout_width="246dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="48dp"
