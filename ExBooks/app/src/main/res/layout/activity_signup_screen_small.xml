<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ex.devs.exbooks.Screens.signupScreen.SignupScreen"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/colorFocused">

        </View>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/quantum_white_100">

        </View>





</LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/quantum_white_100"
            android:shadowDy="2"
            android:shadowDx="2"
            android:shadowColor="@color/quantum_grey"
            android:shadowRadius="15"/>

        <TextView
            android:layout_marginLeft="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create an account and start exchanging\nbooks with people"
            android:textSize="16sp"
            android:textStyle="normal"
            android:textColor="@color/quantum_white_100"
            android:layout_marginTop="10dp"
           />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="464dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:elevation="10dp"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="464dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/readinggg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/emailLayoutID"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="35dp"
                    android:focusedByDefault="false"
                    app:layout_constraintTop_toBottomOf="@+id/imageView2">


                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/emailTFID"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:background="@color/colorHighlith"
                        android:drawableLeft="@drawable/username_layerlist"
                        android:focusedByDefault="false"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="88dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/passwordLayoutID"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:focusedByDefault="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/passwordTFID"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/colorHighlith"
                        android:drawableLeft="@drawable/password_layerlist"
                        android:focusedByDefault="false"
                        android:hint="Password"
                        android:inputType="textPassword"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="88dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/phoneNumberLayoutID"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"
                    android:focusedByDefault="false">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/phoneNumberTFID"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@color/colorHighlith"
                        android:drawableLeft="@drawable/phone_layerlist"
                        android:focusedByDefault="false"
                        android:hint="Phone"
                        android:inputType="phone"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="88dp" />
                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
        </ScrollView>
        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp"
            app:cardElevation="15dp">
            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ripple">
                <Button
                    android:id="@+id/submitBtnID"
                    android:layout_width="wrap_content"
                    android:layout_height="43dp"
                    android:background="@drawable/pressed_btn"
                    android:text="Submit"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="15"
                    android:shadowColor="@color/quantum_grey"
                    android:textStyle="bold"
                    android:textColor="#FFFFFf"/>
            </com.balysv.materialripple.MaterialRippleLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>
