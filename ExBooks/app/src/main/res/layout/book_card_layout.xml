<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.balysv.materialripple.MaterialRippleLayout
        style="@style/ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/book_card"
    app:cardCornerRadius="15dp"
    android:elevation="15dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/book_card_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/book_image_oncardLayout"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"


            android:layout_marginBottom="5dp"
            android:clickable="true"


            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/bookName_oncardLayout"
            android:layout_width="237dp"
            android:layout_height="49dp"
            android:layout_alignParentTop="true"

            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="8dp"
            android:text="Book Name"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/book_image_oncardLayout"
            app:layout_constraintTop_toTopOf="parent" />


       <!-- <TextView
            android:id="@+id/book_description_onCardLayout"
            android:layout_width="237dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"

            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Book Description"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/bookName_oncardLayout"
            app:layout_constraintTop_toBottomOf="@+id/bookName_oncardLayout" />-->

        <Button
            android:id="@+id/deleteBookBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_close_black_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.101" />

        <!--<TextView
            android:id="@+id/book_category_onCardLayout"
            android:layout_width="116dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"

            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:text="Book Category"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toEndOf="@+id/book_image_oncardLayout"
            app:layout_constraintTop_toBottomOf="@+id/bookName_oncardLayout" />-->

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
    </com.balysv.materialripple.MaterialRippleLayout>
</RelativeLayout>